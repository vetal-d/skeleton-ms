# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,scala,gradle,proto}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{graphql,graphqls}]
indent_style = space
indent_size = 4

[*.{java,scala}]
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true

[*.md]
trim_trailing_whitespace = false

[*.{ts,tsx,css,scss,html,ejs}]
indent_style = tab

[Jenkinsfile]
indent_style = space
indent_size = 2
